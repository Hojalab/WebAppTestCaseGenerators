# Thanks to http://github.com/threedaymonk/treetop-example/blob/master/complex_html.treetop
# for the basis of this grammar.
grammar ERBGrammar
  rule document
    (text / erb_tag)* {
      def content
        elements.map { |e| e.content }
      end
    }
  end

  rule erb_tag
    '<%' [^%>]+ '%>' {
      def content
        [:erb_tag, elements[1].text_value]
      end
    }
  end

  rule text
    [^<]+ {
      def content
        [:text, text_value]
      end
    }
  end  
end
